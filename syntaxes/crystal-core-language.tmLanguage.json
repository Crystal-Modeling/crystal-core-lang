{
  "name": "crystal-core-language",
  "scopeName": "source.crystal-core-language",
  "fileTypes": [
    ".ccore"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.crystal-core-language",
      "match": "\\b(Hello|person)\\b"
    },
    {
      "name": "string.quoted.double.crystal-core-language",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.crystal-core-language",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.crystal-core-language",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.crystal-core-language"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.crystal-core-language"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.crystal-core-language"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.crystal-core-language"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.crystal-core-language",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
